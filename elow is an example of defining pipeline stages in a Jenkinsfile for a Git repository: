pipeline {
    agent any // Run on any available agent (node)

    stages {
        stage('Checkout') {
            steps {
                // Fetch code from the repository
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Compile, package, or prepare your application
                sh 'npm install' // Example: Install dependencies
                sh 'npm run build' // Example: Build your app
            }
        }

        stage('Test') {
            steps {
                // Run tests
                sh 'npm test' // Example: Run tests
            }
        }

        stage('Deploy') {
            steps {
                // Deploy your application
                sh 'echo "Deploying your app..."'
                // Additional deployment steps (e.g., copy files to server, restart services, etc.)
            }
        }
    }
}
